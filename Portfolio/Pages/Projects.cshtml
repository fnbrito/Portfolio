@page
@model ProjectsModel
@{
    ViewData["Title"] = "Projects";
}

<div class="flex-1 flex flex-col">
    @foreach (var project in Model.Projects)
    {
        <div class="bg-blue-300 rounded-xl flex">
            <div>
                <h1 class="text-xl font-bold">@project.Name</h1>
                <p>@project.Description</p>
                <a href="@project.SourceUrl">@project.Source</a>
            </div>
            <div>
                <img src="@project.ImageUrl" alt="@project.ImageDescription">
            </div>
        </div>
    }
</div>